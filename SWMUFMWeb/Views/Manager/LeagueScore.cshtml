@model List<SWMUFMWeb.LeagueScore_Teamname>
@{
    Layout = "_ManagerLayout";
}

<h1>联赛状态管理</h1>
<hr />
<table>
    <thead>
        <tr>
            <th>球队id</th>
            <th>球队名称</th>
            <th>球队分数</th>
            <th>联赛id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.leagueScore.TeamId</td>
                <td>@item.teamname</td>
                <td>@item.leagueScore.Score</td>
                <td>@item.leagueScore.LeagueId</td>
            </tr>
        }
    </tbody>
</table>
<div style="margin:40px">
    @if (ViewBag.pageIndex <= 1)
    {
        @Html.ActionLink("上页","LeagueScore",new{leagueId=ViewBag.leagueId})
        ;
    }
    else
    {
        @Html.ActionLink("上一页","LeagueScore",new{leagueId=ViewBag.leagueId,pageIndex=ViewBag.pageIndex-1,pageSize=ViewBag.pageSize})
        ;
    }
    共 @ViewBag.totalPage 页，第<input style="width:25px" type="text" value="@ViewBag.pageIndex" name="pageIndex" />页
    @if (ViewBag.pageIndex >= ViewBag.totalPage)
    {
        @Html.ActionLink("下一页","LeagueScore",new{leagueId=ViewBag.leagueId})
        ;
    }
    else
    {
        @Html.ActionLink("下一页","LeagueScore",new{leagueId=ViewBag.leagueId,pageIndex=ViewBag.pageIndex+1,pageSize=ViewBag.pageSize})
        ;
    }
</div>
<hr />
<h2>添加参加联赛队伍信息</h2>
<form asp-action="InsertLeagueScore" method="post">
    <label>球队id</label>
    @Html.DropDownList("teamId",ViewBag.teamSelectList as SelectList,"选择球队",new{@class="downList"})
    <label>分数</label>
    <input type="text" name="score" />
    <button type="submit" name="leagueId" value="@ViewBag.leagueId">提交</button>
</form>
<hr />
<h2>修改参加联赛队伍信息</h2>
<form asp-action="UpdateLeagueScore" method="post">
    <label>球队id</label>
    @Html.DropDownList("teamId",ViewBag.leagueTeamSelectList as SelectList,"选择球队",new{@class="downList"})
    <label>分数</label>
    <input type="text" name="score" />
    <button type="submit" name="leagueId" value="@ViewBag.leagueId">提交</button>
</form>
<hr />
<h2>删除参加联赛队伍信息</h2>
<form asp-action="DeleteLeagueScore" method="post">
    <label>球队id</label>
    <input type="text" name="teamId" />
    <button type="submit" name="leagueId" value="@ViewBag.leagueId">提交</button>
</form>