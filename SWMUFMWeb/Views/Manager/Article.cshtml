@model List<SWMUFMWeb.Models.Article>
@{
    Layout = "_ManagerLayout";
}
<h1>文章管理界面</h1>
<hr />
<h2>文章列表</h2>

<table>
    <thead>
        <tr>
            <th>文章Id</th>
            <th>文章标题</th>
            <th style="width:900px">文章内容</th>
            <th>文章发布时间</th>
            <th>发布用户Id</th>
            <th>删除</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ArticleId</td>
                <td>@item.ArticleTitle</td>
                <td>@item.ArticleContent</td>
                <td>@item.ArticleDate</td>
                <td>@item.UserId</td>
                <td>@Html.ActionLink("删除","DeleteArticle",new{articleId=item.ArticleId})</td>
            </tr>
        }
    </tbody>
</table>
