@{
	Layout = "_UserPageLayout";
}

<body>
	<section class="hero-section">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="hs-text">
						<h2>注册账号</h2>
						<p></p>
					</div>
				</div>
				<div class="col-lg-6">
					<form asp-action="Login" class="hero-form">
						<input type="text" name="userId" placeholder="你的账号">
						<input type="text" name="userPassword" placeholder="你的密码">
						<p>没有账号？请点击注册账号</p>
						<button class="site-btn" asp-action="Login">登录</button>
						<button class="site-btn" asp-action="Register" style="margin-left: 60px;">注册账号</button>
					</form>
				</div>
			</div>
		</div>
		
		<div class="hero-slider owl-carousel">
            <div class="hs-item set-bg" data-setbg="/img/zc.jpg" />
        </div>
		
	</section>
</body>
